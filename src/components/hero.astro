---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24 gap-6">
	<div class="py-6 md:order-1 hidden md:block">
		<img
			src={"https://ck-portfolio-images.s3.eu-west-2.amazonaws.com/images/projects/playq/1/resized/1024.png"}
			alt="Astronaut in the air"
			sizes="(max-width: 800px) 100vw, 620px"
			loading="eager"
      class="rounded-md border-2 border-foreground overflow-hidden"
		/>
	</div>
	<div>
		<h1
			class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter"
		>
			Get your games in line with playQ
		</h1>
		<p class="text-lg mt-4 text-foreground-muted max-w-xl">
			Astroship is a starter template for startups, marketing websites & landing pages.<wbr
			/> Built with Astro.build and TailwindCSS. You can quickly create any website with this
			starter.
		</p>
		<div class="mt-6 flex flex-col sm:flex-row gap-3">
			<Link
				href="#"
				href="https://web3templates.com/templates/astroship-starter-website-template-for-astro"
				target="_blank"
				class="flex gap-1 items-center justify-center"
				rel="noopener"
			>
				Get Started
			</Link>
			<Link
				size="lg"
				style="outline"
				rel="noopener"
				href="https://github.com/surjithctly/astroship"
				class="flex gap-1 items-center justify-center"
				target="_blank"
			>
				<Icon class="w-4 h-4" name="bx:bxl-github" />
				GitHub Repo
			</Link>
		</div>
	</div>
</main>
